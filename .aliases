#!/bin/bash

# general
alias c="cd"
alias ..="cd .."
alias -- -="cd -"
alias mk="mkdir"
alias ls="ls -F --color=auto"
alias l="ls"
alias ll="ls -lah"
alias tree="tree -C"
alias cl="clear"
alias ZZ="exit"
alias :q="exit"
alias clip="pbcopy"
alias sudo="sudo "

# folders 
alias code="cd ~/code"
alias downloads="cd ~/Downloads"
alias dls="downloads"
alias docs="cd ~/Documents"

# python
alias unittest="coverage run --source . -m unittest"
alias flake8="flake8 --ignore=E731,--max-complexity 10"

# git
alias git="hub"
alias g="git"
alias dgit="git --git-dir ~/.dotfiles/.git --work-tree=$HOME"
alias dg="dgit"

# vim
alias v="vim"

# other
alias sshtor="ssh -F ~/.ssh/config_tor"
alias sshkeys="ssh-keygen -l -f ~/.ssh/known_hosts"
alias aliases="vim ${HOME}/.aliases && source ${HOME}/.aliases"
alias profile="vim ${HOME}/.profile && source ${HOME}/.profile"
alias vscode="/usr/local/bin/code"
alias weather="curl -4 http://wttr.in/Galway"
alias ip="curl -4 icanhazip.com"
alias tmux="tmux -2"
alias mutt="neomutt"
alias hexdump="hexdump -C"

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
	alias "${method}"="lwp-request -m '${method}'"
done

# OSX only
if [[ "$OSTYPE" == "darwin"* ]]; then
 alias sha256sum="shasum -a 256"
 alias vim="mvim -v"
 alias update="sudo softwareupdate -i -a; brew update; brew upgrade; brew cleanup"
 alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
 alias finder="open ."
fi
